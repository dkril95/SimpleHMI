<Window x:Class="BeckhoffHMI_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Beckhoff HMI" Height="300" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button x:Name="BtnConnect" Content="Connect to PLC" Width="150" Height="35" Margin="10" Click="BtnConnect_Click"/>
            <Button x:Name="BtnWrite" Content="Increase counter" Width="150" Height="35" Margin="10" Click="BtnWrite_Click"/>
        </StackPanel>

        <TextBlock x:Name="LblCounter" Grid.Row="1"
                   Text="Counter: ---"
                   FontSize="18"
                   HorizontalAlignment="Center"
                   Margin="5"
                   Foreground="DarkBlue"/>

        <TextBlock x:Name="LblTemperature" Grid.Row="2"
                   Text="Temperature: --- °C"
                   FontSize="18"
                   HorizontalAlignment="Center"
                   Margin="5"
                   Foreground="DarkRed"/>

        <Ellipse x:Name="StatusLed"
                 Grid.Row="3"
                 Width="30" Height="30"
                 Fill="Red"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"/>
    </Grid>
</Window>